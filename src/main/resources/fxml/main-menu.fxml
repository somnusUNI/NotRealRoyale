<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="470" prefWidth="470" style="-fx-background-color: cab577;" xmlns="http://javafx.com/javafx/16"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ru.nsu.fit.kolesnik.notrealroyale.view.javafx.MainMenuController">
    <VBox alignment="CENTER" maxHeight="400" maxWidth="400" spacing="20.0" style="-fx-background-color: white;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label text="NotRealRoyale">
            <font>
                <Font name="Monospaced Bold" size="24.0"/>
            </font>
        </Label>
        <HBox prefHeight="38.0" prefWidth="342.0">
            <Label prefHeight="36.0" prefWidth="135.0" text="Username">
                <font>
                    <Font size="16.0"/>
                </font>
                <padding>
                    <Insets left="10.0" right="50.0" top="10.0"/>
                </padding>
            </Label>
            <TextField fx:id="usernameTextField" prefHeight="26.0" prefWidth="175.0">
                <HBox.margin>
                    <Insets top="5.0"/>
                </HBox.margin>
            </TextField>
        </HBox>
        <HBox layoutX="30.0" layoutY="70.0" prefHeight="47.0" prefWidth="342.0">
            <Label prefHeight="30.0" prefWidth="136.0" text="Server IP">
                <font>
                    <Font size="16.0"/>
                </font>
                <padding>
                    <Insets left="10.0" right="35.0" top="5.0"/>
                </padding>
            </Label>
            <TextField fx:id="serverIPTextField" prefHeight="26.0" prefWidth="175.0">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </TextField>
        </HBox>
        <Label fx:id="errorMessageLabel" alignment="CENTER" prefHeight="26.0" prefWidth="351.0" textFill="#cc0000">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <Button fx:id="playButton" mnemonicParsing="false" onAction="#playButtonOnClick" prefHeight="34.0"
                prefWidth="248.0" style="-fx-background-color: b1cbbb;" text="Play">
            <font>
                <Font name="System Bold" size="19.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="30.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonOnClick" prefHeight="34.0"
                prefWidth="245.0" style="-fx-background-color: eea29a;" text="Exit">
            <font>
                <Font name="System Bold" size="19.0"/>
            </font>
        </Button>
    </VBox>
</StackPane>
